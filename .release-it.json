{
  "git": {
    "tagName": "v${version}",
    "requireCleanWorkingDir": false,
    "commitMessage": "Release v${version}",
    "tag": true,
    "push": true,
    "commit": true,
    "publish": false
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": false
  },
  "hooks": {
    "before:init": [
      "git pull",
      "yarn",
      "yarn build"
    ],
    "after:bump": "yarn changelog:update"
  }
}

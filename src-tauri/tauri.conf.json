{
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "pamyu",
    "version": "0.0.9"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": true,
        "open": true,
        "scope": [
          {
            "name": "go-renpy",
            "cmd": "cd",
            "args": [
              {
                "validator": ".*"
              }
            ]
          },
          {
            "name": "renpy",
            "cmd": "renpy.exe",
            "args": []
          }
        ]
      },
      "dialog": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "pamyu.antharuu.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Pamyu",
        "width": 1280,
        "height": 720,
        "minWidth": 1280,
        "minHeight": 720,
        "fileDropEnabled": false
      }
    ]
  }
}
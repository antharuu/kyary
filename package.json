{
  "name": "pamyu",
  "private": false,
  "version": "0.0.5",
  "description": "Pamyu is a Visual Novel game engine/framework project. It is developed in Typescript.",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "author": {
    "name": "Antharuu",
    "email": "antho.eclips@gmail.com"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && sass src/styles/global.scss lib/styles/global.css --style compressed",
    "lint": "eslint --fix src/core/*.{ts,tsx}",
    "up": "yarn cmd::release",
    "cmd::release": "yarn lint && release-it --ci",
    "changelog:update": "npx auto-changelog --commit-limit false --hide-empty-releases --hide-credit --release-summary false -p && git add CHANGELOG.md"
  },
  "dependencies": {
    "@modyfi/vite-plugin-yaml": "^1.0.4",
    "eslint": "^8.44.0",
    "i18n-js": "^4.2.3",
    "sass": "^1.64.1",
    "yaml": "^2.3.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "release-it": "^16.1.3",
    "typescript": "^4.9.5",
    "vite": "^4.3.9"
  }
}
